<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/grainger_inside"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageView
        android:id="@+id/red1"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toStartOf="@+id/red2"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toBottomOf="@+id/blueBakcgroudn"
        app:srcCompat="@android:color/holo_red_light" />

    <ImageView
        android:id="@+id/red2"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/red3"
        app:layout_constraintStart_toEndOf="@+id/red1"
        app:layout_constraintTop_toBottomOf="@+id/blueBakcgroudn"
        app:srcCompat="@android:color/holo_red_light" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:backgroundTint="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/orangeBackground"
        android:layout_width="204dp"
        android:layout_height="183dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Computer"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orangeBackground" />

    <ImageView
        android:id="@+id/laptopIcon"
        android:layout_width="171dp"
        android:layout_height="197dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/laptop" />

    <ImageView
        android:id="@+id/blueBakcgroudn"
        android:layout_width="376dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orangeBackground"
        app:srcCompat="@color/design_default_color_primary" />

    <TextView
        android:id="@+id/description"
        android:layout_width="326dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Descrptionno"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/blueBakcgroudn"
        app:layout_constraintEnd_toEndOf="@+id/blueBakcgroudn"
        app:layout_constraintStart_toStartOf="@+id/blueBakcgroudn"
        app:layout_constraintTop_toTopOf="@+id/blueBakcgroudn" />

    <ImageView
        android:id="@+id/red3"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/red2"
        app:layout_constraintTop_toBottomOf="@+id/blueBakcgroudn"
        app:srcCompat="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/plusOne"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="+1"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/red1"
        app:layout_constraintStart_toStartOf="@+id/red1"
        app:layout_constraintTop_toTopOf="@+id/red1" />

    <TextView
        android:id="@+id/plusTen"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="+10"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/red2"
        app:layout_constraintStart_toStartOf="@+id/red2"
        app:layout_constraintTop_toTopOf="@+id/red2" />

    <TextView
        android:id="@+id/plusHundred"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="+100"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/red3"
        app:layout_constraintStart_toStartOf="@+id/red3"
        app:layout_constraintTop_toTopOf="@+id/red3" />

</android.support.constraint.ConstraintLayout>